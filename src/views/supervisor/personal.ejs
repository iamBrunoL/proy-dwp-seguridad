<%- include("../partials/_headerSupervisor", { titulo: titulo }) %>

<div class="container mt-5 datos">
  <div class="row">
    <div class="col-lg-6 col-sm-12">
      <img src="img/registro_personal.jpeg" class="img-fluid" alt="Phone image" />
    </div>
    <div class="col-lg-6 col-sm-12">
      <form action="/addPersonal" method="POST">
        <div class="form-outline mb-4">
          <label for="nombre">Nombre</label>
          <input
            type="text"
            id="nombre"
            name="nombreCompleto"
            placeholder="Nombre"
            class="form-control mb-2"
            autofocus
            pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+"
            title="Ingrese solo letras y espacios"
            minlength="4"
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="apellidos">Apellidos</label>
          <input
            type="text"
            id="apellidos"
            name="apellidos"
            placeholder="Apellidos"
            class="form-control mb-2"
            autofocus
            pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+"
            title="Ingrese solo letras y espacios"
            minlength="4"
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="email">Correo</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Dirección de correo electrónico"
            class="form-control mb-2"
            autofocus
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="fechaNacimiento">Fecha de Nacimiento</label>
          <input
            type="date"
            id="fechaNacimiento"
            name="fechaNacimiento"
            class="form-control mb-2"
            autofocus
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="telefono">Teléfono</label>
          <input
            type="tel"
            id="telefono"
            name="telefono"
            placeholder="Teléfono"
            class="form-control mb-2"
            autofocus
            pattern="[0-9]+"
            title="Ingrese solo números"
            minlength="10"
            maxlength="10"
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="username">Nombre de usuario</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Nombre de usuario"
            class="form-control mb-2"
            autofocus
            pattern="[a-zA-Z0-9]+"
            title="Ingrese solo letras y números"
            minlength="6"
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="domicilio">Domicilio</label>
          <input
            type="text"
            id="domicilio"
            name="domicilio"
            placeholder="Domicilio"
            class="form-control mb-2"
            autofocus
            pattern="[a-zA-Z0-9.°#ñÑáéíóúÁÉÍÓÚ\s]+"
            title="Ingrese solo letras, símbolos "#", " ° " ,"." y números"
            minlength="10"
            required
          />
        </div>

        <div class="form-outline mb-4">
          <label for="password">Contraseña</label>
          <input
            type="password"
            id="contrasenaRegistro"
            name="password"
            placeholder="Contraseña"
            class="form-control mb-2"
            autofocus
            minlength="9"
            required
          />
          <div style="text-align: right; margin-top: 2px">
            <input
              type="checkbox"
              id="mostrar_password"
              title="Presione para mostrar la contraseña"
            />
            &nbsp;&nbsp;Mostrar contraseña
          </div>
        </div>

        <button type="submit" class="btn btn-info">Registrar usuario de personal</button>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/_footer") %>
