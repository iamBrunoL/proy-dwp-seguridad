<%- include("../partials/_headerSupervisor", { titulo: titulo }) %>

<div class="container mt-5 fluid">
  <h1>Consulta de citas</h1>
  <div class="row">
    <button onclick="window.location.href='/generarPDFCitas'" class="btn btn-primary">Generar PDF</button>
  </div>
</div>

<div class="container mt-5 fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div id="tableExample">
        <div class="table-responsive">
          <table class="table table-sm fs-9 mb-0">
            <thead>
              <tr>
                <th class="sort border-top border-translucent">ID de cita</th>
                <th class="sort border-top border-translucent">
                  Usuario solicitante
                </th>
                <th class="sort border-top border-translucent">Motivo</th>
                <th class="sort border-top border-translucent">Descripci√≥n</th>
                <th class="sort border-top border-translucent">
                  Fecha de registro
                </th>
                <th class="sort border-top border-translucent">Estatus</th>
              </tr>
            </thead>
            <tbody class="list">
              <% if (!citas || citas.length === 0) { %>
              <tr>
                <td colspan="7"><%= message %></td>
              </tr>
              <% } else { %> <% for(var i = 0; i < citas.length; i++) { %>
              <tr>
                <td class="align-middle"><%= citas[i].id %></td>
                <td class="align-middle"><%= citas[i].nombreUsuario %></td>
                <td class="align-middle"><%= citas[i].motivo %></td>
                <td class="align-middle"><%= citas[i].descripcion %></td>
                <td class="align-middle"><%= citas[i].fecha %></td>
                <td class="align-middle"><%= citas[i].estatus %></td>
              </tr>
              <% } %> <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/_footer") %>
