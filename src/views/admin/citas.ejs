<%- include("../partials/_headerAdmin", { titulo: titulo }) %>

<div class="container mt-5 fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div id="tableExample" data-list="{&quot;valueNames&quot;:[&quot;fecha&quot;,&quot;descripcion&quot;,&quot;estatus&quot;],&quot;page&quot;:5,&quot;pagination&quot;:true}">
        <div class="table-responsive">
          <table class="table table-sm fs-9 mb-0">
            <thead>
              <tr>
                <th class="sort border-top border-translucent ps-3" data-sort="fecha">ID de cita</th>
                <th class="sort border-top border-translucent ps-3" data-sort="fecha">Fecha de registro</th>
                <th class="sort border-top border-translucent" data-sort="descripcion">Descripci√≥n</th>
                <th class="sort border-top border-translucent" data-sort="estatus">Estatus</th>
                <th class="sort text-end align-middle pe-0 border-top border-translucent" scope="col">Opciones</th>
              </tr>
            </thead>
            <tbody class="list">
              <% if (citas) { %>
                <% for(var i = 0; i < citas.length; i++) { %>
                  <tr>
                    <td class="align-middle estatus"><%= citas[i].id %></td>
                    <td class="align-middle ps-3 fecha"><%= citas[i].fecha %></td>
                    <td class="align-middle descripcion"><%= citas[i].descripcion %></td>
                    <td class="align-middle estatus"><%= citas[i].estatus %></td>
                    <td class="align-middle white-space-nowrap text-end pe-0">
                      <div class="btn-reveal-trigger position-static">
                        <a href="/updateCita/<%= citas[i].id %>" class="btn btn-info btn-Act">Editar</a>
                        <a href="/deleteCita/<%= citas[i].id %>" class="btn btn-danger btn-Act">Eliminar</a>
                      </div>
                    </td>
                  </tr>
                <% } %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/_footer") %>
