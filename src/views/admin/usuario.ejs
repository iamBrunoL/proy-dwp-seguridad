<%- include("../partials/_headerAdmin") %>

<div class="container mt-5 fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <table class="table table-responsive">
        <thead>
          <tr>
            <td>ID</td>
            <td>Nombre completo</td>
            <td>Nombre de usuario</td>
            <td>Email</td>
            <td>Tel√©fono</td>
            <td>Role</td>
            <td>Opciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (usuarios) { %> <% for(var i = 0; i < usuarios.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= usuarios[i].nombreCompleto %></td>
            <td><%= usuarios[i].username %></td>
            <td><%= usuarios[i].email %></td>
            <td><%= usuarios[i].telefono %></td>
            <td><%= usuarios[i].role %></td>
            <td class="d-flex gap-2">
              <a href="/updateUsuario/<%= usuarios[i].id %>" class="btn btn-info" style="margin-bottom: 2px; margin-right: 2px;">
                Editar
              </a>
              <a href="/deleteUsuario/<%= usuarios[i].id %>" class="btn btn-danger">
                Eliminar
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

