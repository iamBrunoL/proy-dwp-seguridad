<%- include("../partials/_headerAdmin", { titulo: titulo }) %>

<div class="container mt-5 fluid">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div id="tableExample" data-list="{&quot;valueNames&quot;:[&quot;name&quot;,&quot;email&quot;,&quot;age&quot;],&quot;page&quot;:5,&quot;pagination&quot;:true}">
        <div class="table-responsive">
          <table class="table table-sm fs-9 mb-0">
            <thead>
              <tr>
                <th class="sort border-top border-translucent ps-3" data-sort="name">Nombre completo</th>
                <th class="sort border-top border-translucent" data-sort="email">Username</th>
                <th class="sort border-top border-translucent" data-sort="age">Email</th>
                <th class="sort text-end align-middle pe-0 border-top border-translucent" scope="col">Tel√©fono</th>
                <th class="sort text-end align-middle pe-0 border-top border-translucent" scope="col">Role</th>
                <th class="sort text-end align-middle pe-0 border-top border-translucent" scope="col">Opciones</th>
              </tr>
            </thead>
            <tbody class="list">
              <% if (usuarios) { %>
                <% for(var i = 0; i < usuarios.length; i++) { %>
                  <tr>
                    <td class="align-middle ps-3 name"><%= usuarios[i].nombreCompleto %> <%= usuarios[i].apellidos %></td>
                    <td class="align-middle email"><%= usuarios[i].username %></td>
                    <td class="align-middle age"><%= usuarios[i].email %></td>
                    <td class="align-middle white-space-nowrap text-end pe-0"><%= usuarios[i].telefono %></td>
                    <td class="align-middle white-space-nowrap text-end pe-0"><%= usuarios[i].role %></td>
                    <td class="align-middle white-space-nowrap text-end pe-0">
                      <div class="btn-reveal-trigger position-static">
                        <a href="/updateUsuario/<%= usuarios[i].id %>" class="btn btn-info btn-Act" style="margin-bottom: 2px; margin-right: 2px;">Editar</a>
                        <a href="/deleteUsuario/<%= usuarios[i].id %>" class="btn btn-danger btn-Act">Eliminar</a>
                      </div>
                    </td>
                  </tr>
                <% } %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/_footer") %>
