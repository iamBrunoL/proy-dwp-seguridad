<%- include("../partials/_headerUsuarioG", { titulo: titulo }) %>

<div class="container mt-5 datos">
  <div class="row">
    <div class="col-lg-6 col-sm-12">
      <div class="card-body">
        <form action="/addCita" method="POST">
          <div class="form-outline-mb-4">
            <label for="form-label">Motivo</label>
            <input
              type="text"
              name="motivo"
              placeholder="Motivo de la cita (máximo 30 caracteres)"
              class="form-control mb-2"
              minlength="8"
              maxlength="30"
              autofocus
              pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+"
              title="Ingrese solo letras y espacios"
              required
            />
          </div>

          <div class="form-outline-mb-4">
            <label for="form-label">Descripción</label>
            <input
              type="text"
              name="descripcion"
              placeholder="Ingrese los detalles de su cita (máximo 300 caracteres)"
              class="form-control mb-2"
              minlength="15"
              maxlength="300"
              autofocus
              pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+"
              title="Ingrese solo letras y espacios"
              required
            />
          </div>

          <div class="form-outline-mb-4">
            <label for="form-label">Lugar</label>
            <input
              type="text"
              placeholder="Consultar posteriormente"
              class="form-control mb-2"
              readonly
            />
          </div>

          <div class="form-outline-mb-4">
            <label for="form-label">Fecha programada</label>
            <input
              type="text"
              placeholder="Consultar posteriormente"
              class="form-control mb-2"
              readonly
            />
          </div>

          <div class="form-outline-mb-4">
            <label for="form-label">Estatus</label>
            <input
              type="text"
              placeholder="Consultar posteriormente"
              class="form-control mb-2"
              readonly
            />
          </div>


          




          <br />
          <button type="submit" class="btn btn-info">Agendar</button>
        </form>
      </div>
    </div>
    <div class="col-lg-6 col-sm-12">
      <img src="img/crear_citas.png" class="img-fluid" alt="Phone image" />
    </div>
  </div>
</div>

<%- include("../partials/_footer") %>
