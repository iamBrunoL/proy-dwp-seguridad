<%- include("../partials/_headerUsuarioG", { titulo: titulo }) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="card-body">
        <form action="/addCita" method="POST">
          <div class="form-outline-mb-4">
            <label for="form-label">Fecha</label>
            <input
              type="date"
              name="fecha"
              placeholder="Fecha"
              class="form-control mb-2"
              autofocus
              minlength="4"
              required
            />
          </div>

          

          <div class="form-label-mb-4">
            <label for="form-label">Motivo</label>
            <input
              type="text"
              name="motivo"
              placeholder="Motivo de la cita"
              class="form-control mb-2"
              minlength="15"
              required
            />
          </div>

          <div class="form-label-mb-4">
            <label for="form-label">Descripcion</label>
            <input
              type="text"
              name="descripcion"
              placeholder="Ingrese los detalles de su cita (mÃ¡ximo 300 caracteres)"
              class="form-control mb-2"
              minlength="15"
              required
            />
          </div>

        

          <br />
          <button type="submit" class="btn btn-info">Agendar</button>
        </form>
      </div>
    </div>
  </div>
</div>

