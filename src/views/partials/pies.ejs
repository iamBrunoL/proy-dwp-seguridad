<script>
  function validarFechaNacimiento() {
    var fechaNacimiento = new Date(document.getElementById('fechaNacimiento').value);
    var hoy = new Date();
    var edadMinima = new Date(hoy.getFullYear() - 18, hoy.getMonth(), hoy.getDate());

    if (fechaNacimiento > edadMinima) {
      alert("Debes tener al menos 18 años para registrarte. Por favor, modifica el año de nacimiento.");
      return false;
    } else {
      return true;
    }
  }

  // Agregar el evento onSubmit al formulario para llamar a la función validarFechaNacimiento()
